<% if flash[:errors] %>
<h3><%= flash[:errors] %></h3>
<% end %>

<h1>Login</h1>
<%= form_tag sessions_path do %>
    <%= label_tag "Username" %><br>
    <%= text_field_tag :username, nil, placeholder: "Username" %><br>
    <br>

    <%= label_tag "Password" %><br>
    <%= password_field_tag :password, nil, placeholder: "Password" %><br>

    <br>
    <%= submit_tag "Log In" %>
    <% end %>
