<br>

<% if flash[:error] %>
    <h4><%= flash[:error]%></h4>
<% end %>

<br><br>

<h1>Login</h1><br>
<%= form_tag sessions_path do %>
    <%= label_tag "Username" %><br>
    <%= text_field_tag :username, nil, placeholder: "Username" %><br>
    <br>

    <%= label_tag "Password" %><br>
    <%= password_field_tag :password, nil, placeholder: "Password" %><br>

    <br>
    <%= submit_tag "Log In" %>
    <% end %>

