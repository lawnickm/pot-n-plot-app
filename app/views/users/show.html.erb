<h1>Welcome <%=@user.full_name %></h1>
<h4>About Me!</h4>
<p><%= @user.bio%></p>

<% if current_user == @user %>
<h2>Your gardens</h2>
<% @user.gardens.each do |garden| %>
    <%= link_to garden.name, garden_path(garden) %>
<% end %>
<br>
<br>
<%= button_to "Edit", edit_user_path(@user), method: :get %>
<%= button_to "Delete", user_path(@user), method: :delete %>
<%= button_to "Logout", logout_path, method: :post %>
<% end %>
