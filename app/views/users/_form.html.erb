<center>
<% if flash[:error] %>
<% flash[:error].each do |error|%>
    <h5><font color="red">*<%= error %></font></h5>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :Name %><br>
    <%= f.text_field :full_name, placeholder: "First & Last Name" %><br><br>

    <%= f.label :Username %><br>
    <%= f.text_field :username, placeholder: "Username" %><br><br>

    <%= f.label :Password %><br>
    <%= f.password_field :password, placeholder: "Password" %><br><br>

    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password"%><br><br>

    <%= f.label :Bio %><br>
    <%= f.text_area :bio, placeholder: "Tell the community about yourself here!" %><br><br>

    <%= f.submit %>

    <% end %>