<% if flash[:error] %>
<h3><%= flash[:error]%></h3>
<% end %>
<%= form_for @user do |f| %>
    <%= f.label :Name %><br>
    <%= f.text_field :full_name, placeholder: "First & Last Name" %><br> 

    <%= f.label :Username %><br>
    <%= f.text_field :username, placeholder: "Username" %><br>

    <%= f.label :Password %><br>
    <%= f.password_field :password, placeholder: "Password" %><br>

    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password"%><br>

    <%= f.label :Bio %><br>
    <%= f.text_area :bio, placeholder: "Tell the community about yourself here!" %><br>

    <%= f.submit %>

    <% end %>